<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context="org.versebyverseministry.vbvmi.fragments.studies.lesson.LessonAudioActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_above="@+id/linearLayout"
      android:layout_alignParentTop="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"/>
  </RelativeLayout>

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/time_current"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:paddingEnd="4dip"
          android:paddingStart="4dip"
          android:paddingTop="4dip"
          android:textColor="@color/tableCellText"
          android:textSize="14sp"
          android:textStyle="bold"
          android:typeface="monospace"
          tools:text="12:12"/>

      <SeekBar
          android:id="@+id/mediacontroller_progress"
          style="@style/MySeekBarTheme"
          android:layout_width="0dip"
          android:layout_height="32dip"
          android:layout_weight="1"
          tools:progress="50"/>

      <TextView
          android:id="@+id/timeRemaining"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:paddingEnd="4dip"
          android:paddingStart="4dip"
          android:paddingTop="4dip"
          android:textColor="@color/tableCellText"
          android:textSize="14sp"
          android:textStyle="bold"
          android:typeface="monospace"
          tools:text="13:13"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/tableCellText"
        android:textSize="18sp"
        tools:text="Daniel - Lesson 1"/>

    <TextView
        android:id="@+id/descriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/tableCellText"
        android:textSize="14dp"
        tools:text="Chapter 1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dip">

      <ImageButton
          android:id="@+id/rew"
          style="@style/MediaButton.Rew"/>

      <ImageButton
          android:id="@+id/pause"
          style="@style/MediaButton.Play"/>

      <ImageButton
          android:id="@+id/ffwd"
          style="@style/MediaButton.Ffwd"/>
    </LinearLayout>

  </LinearLayout>

</RelativeLayout>