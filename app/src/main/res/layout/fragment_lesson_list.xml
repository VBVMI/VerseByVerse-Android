<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

  <android.support.v7.widget.RecyclerView
      android:id="@+id/list"
      android:name="org.versebyverseministry.vbvmi.fragments.studies.LessonFragment"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layoutManager="LinearLayoutManager"
      tools:context="com.erpdevelopment.vbvm.fragments.studies.study.LessonsFragment"
      tools:listitem="@layout/item_lesson"
      android:layout_marginLeft="@dimen/lessons_horizontal_margin"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="@dimen/lessons_horizontal_margin"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="0dp"/>

  <com.erpdevelopment.vbvm.views.LoadingView
      android:id="@+id/loading_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible"/>
</android.support.constraint.ConstraintLayout>
