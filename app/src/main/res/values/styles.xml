<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorPrimary</item>
    <item name="android:textColorPrimary">@android:color/white</item>
    <item name="android:textColorSecondary">@color/colorDimWhite</item>
  </style>

  <style name="AppTheme.BottomBar" parent="AppTheme">
    <!-- Customize your theme here. -->
    <item name="android:textColorPrimary">@color/colorUnselectedText</item>
    <item name="android:textColorSecondary">@color/colorUnselectedText</item>
  </style>

  <style name="AppTheme.NoActionBar" parent="AppTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


  <style name="AppTheme.Text" parent="AppTheme">
    <item name="android:textColorPrimary">@color/tableCellText</item>
    <item name="android:textColorSecondary">@color/tableCellText</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="AppTheme.Text.LessonNumber">
    <item name="android:textSize">24sp</item>
  </style>

  <style name="MediaButton">
    <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    <item name="android:tint">@color/tableCellText</item>
    <item name="android:layout_width">71dp</item>
    <item name="android:layout_height">52dp</item>
  </style>

  <style name="MediaButton.Play" parent="MediaButton">
    <item name="android:src">@drawable/ic_play_arrow</item>
    <item name="android:contentDescription">@string/lockscreen_transport_play_description</item>
  </style>

  <style name="MediaButton.Ffwd" parent="MediaButton">
    <item name="android:src">@drawable/ic_forward_30</item>
    <item name="android:contentDescription">@string/lockscreen_transport_ffw_description</item>
  </style>

  <style name="MediaButton.Rew" parent="MediaButton">
    <item name="android:src">@drawable/ic_replay_30</item>
    <item name="android:contentDescription">@string/lockscreen_transport_rew_description</item>
  </style>

  <style name="MediaButton.Pause" parent="MediaButton">
    <item name="android:src">@drawable/ic_pause</item>
    <item name="android:contentDescription">@string/lockscreen_transport_pause_description</item>
  </style>

  <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar" >

  </style>

  <style name="Text">
  </style>

  <style name="Text.AudioTitle">
    <item name="android:textSize">16dp</item>
  </style>

  <style name="Text.TinyAudioTitle">
    <item name="android:textSize">12dp</item>
  </style>

  <style name="Text.Extras">
    <item name="android:textSize">20sp</item>
    <item name="android:color">@color/tableCellText</item>
  </style>

  <style name="Dialog" parent="android:Theme.Holo.Light.Dialog">
    <item name="android:windowBackground">@drawable/dialog_background</item>
  </style>

</resources>
