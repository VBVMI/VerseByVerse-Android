<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.erpdevelopment.vbvm"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
      android:name="com.erpdevelopment.vbvm.MyApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:networkSecurityConfig="@xml/network_security_config"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme.NoActionBar">
    <meta-data
        android:name="com.bumptech.glide.integration.okhttp3.OkHttpGlideModule"
        android:value="GlideModule"/>

    <activity
        android:name="com.erpdevelopment.vbvm.application.MainActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="com.erpdevelopment.vbvm.fragments.studies.lesson.LessonAudioActivity"
        style="@style/AppTheme.NoActionBar">
    </activity>

    <service
        android:name="com.erpdevelopment.vbvm.AudioService"
        android:enabled="true"
        android:exported="true">
    </service>
    <service
        android:name="com.erpdevelopment.vbvm.services.DownloadService"
        android:exported="false">
    </service>
    
    <provider
        android:authorities="${applicationId}.com.erpdevelopment.vbvm.GenericFileProvider"
        android:name="com.erpdevelopment.vbvm.GenericFileProvider"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data
          android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/provider_paths"/>
    </provider>

    <meta-data
        android:name="io.fabric.ApiKey"
        android:value="${FabricApiKey}"
        />
  </application>

</manifest>